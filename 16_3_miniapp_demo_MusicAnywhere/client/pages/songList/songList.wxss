/* pages/songList/songList.wxss */
@import '../../src/weui.wxss';
.userinfo-nickname{
  padding: 8rpx 0 10rpx 0;
  font-size: 45rpx;
  color: #8B4513	;
  text-align: center;
  justify-content:center;
  margin-left: 50rpx;
  
}
.background {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.6;
    -webkit-filter: blur(40rpx);
    filter: blur(40rpx);
}
.songListOperation{
  height:50rpx;
  display: flex;
  flex-direction: row;
  margin: 10rpx;
}
.play-all{
  color:#818A8F;
  font-family:'YouYuan';
  font-size:35rpx;
  margin-top:0;
}
.giveLove{
  padding-left: 40rpx;
  margin-right: 5px;
  vertical-align: middle;
  width:50rpx; 
  height: 50rpx;
  padding-top:5rpx;
}
.image_button{
  background: none;
  color: #000;
  width: 70rpx;
  height: 70rpx;
  padding: 0;
  margin: 0;
  align-self: auto;
}
/*button的边框用：：after实现*/
.image_button::after{
  border: none;
}
.image_icon{
  width:62rpx; 
  height: 62rpx;
}
.myitem-name{
  flex: 12;
  text-align: left;
  font-size: 37rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}

.music{
  width: 750rpx;
  background: #ffffff;
  padding: 0;
  display: flex;
}
.former-music{
  flex: 1;
}
.music-item{
  flex: 12;
  text-align: left;
  font-size: 37rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.delete-item{
  flex: 1;
  text-align: center;
  height:50rpx; 
  padding:20rpx
}