/* pages/my/index.wxss */
.myself{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.user-info{
	background-color: #E64340;
	padding-top: 60rpx;
}
.user-info image{
	display: block;
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
	margin: 0 auto 40rpx;
	box-shadow: 0 0 20rpx rgba(0,0,0,.2)
}
.user-info text{
	display: block;
	text-align: center;
	padding: 10rpx 0;
	margin-bottom: 20rpx;
}
.btn-login{
	position: fixed;
	width: 90%;
	left: 50%;
	margin-left: -45%;
  bottom: 5;
}
.gray{
	background-color: #ccc;
}

/* 表格菜单样式 */
.menu-wrp {
  width:100%;
  margin-bottom: 3rpx;
}
.menu-wrp:after{
    content:"";
    display:block;
    clear:both;
}
.menu-list{
    float:left;
    width:25%;
    box-sizing: border-box;
    padding-bottom:10px;
    background-color: #F0F0F0;
}
.menu-img{
    width:120rpx;
    height:84rpx;
    display:block;
    margin:0 auto;
    margin-bottom:5px;
}
.menu-desc{
    background-color:#F0F0F0;
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:12px;
}

.menu-title{
  /* 设置弹性布局方向 */
  flex-direction: row;
  /* 设置弹性布局显示 */
  display: flex;
  /* 设置高度为100px */
  
  /* 设置字体 */
  font-size: 13px;
  width: 100%;
  padding-bottom: 2%;
  background-color: #F0F0F0;
}

.menu-title-left{
  margin-left: 10%;
  width: 60%;
}

.menu-title-right{
  

  color: #ACACAC;
}

/* 列表菜单 */
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  display: flex;
  height: 80rpx;
  margin-bottom: 1%;
  line-height: 80rpx;
   align-items: center;
  font-size: 15px;
  padding-left: 10%;
  background-color: #F0F0F0;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 200px;
  line-height: 200px;
     background-color: #F0F0F0;
}

/* 个人中心样式 */
.icon_class{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
 margin-right: 10%;
 
}

.icon_class_right{
